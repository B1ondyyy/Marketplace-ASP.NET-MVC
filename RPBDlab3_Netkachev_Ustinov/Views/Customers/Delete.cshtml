@model RPBDlab3_Netkachev_Ustinov.Models.Customers

@{
    ViewData["Title"] = "Удаление покупателя";
}

<h1 class="text-center">Удалить</h1>

<h3 class="text-center">Вы уверены, что хотите удалить это?</h3>
<div class="text-center">
    <h4>Покупатель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.CityName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger btn-lg">Удалить</button> |
        <a asp-action="Index" class="btn btn-outline-primary btn-lg">Назад к списку</a>
    </form>
</div>